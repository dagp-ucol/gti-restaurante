<h1 class="my-3">Store Index</h1>
<p>
  <%= link_to 'Add new stores', new_store_path, class: 'btn btn-primary my-3' %>
</p>

<div class="card">
  <div class="card-body">
    <table class="table table-striped">
      <thead>
        <tr>
          <th scope="col">Id</th>
          <th scope="col">Name</th>
          <th scope="col">Address</th>
          <th coolspan=3>Actions</th>
        </tr>
      </thead>
      <tbody>
        <% @stores.each do |store| %>
          <tr>
            <th scope="row"><%= store.id %></th>
            <td><%= store.name %></td>
            <td><%= store.address %></td>
            <td><%= link_to 'Show', store_path(store.id), class: 'btn btn-primary' %></td>
            <td><%= link_to 'Edit', edit_store_path(store.id), class: 'btn btn-success' %></td>
            <td><%= link_to 'Reports', store_reports_path(store.id), class: 'btn btn-info' %></td>
            <td><%= link_to 'Delete', store_path(store), method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger' %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
