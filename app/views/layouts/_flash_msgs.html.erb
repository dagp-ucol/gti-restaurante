<% flash.each do |name, msg| %>
  <% if name == 'notice' %>
    <div class="alert alert-success alert-dismissible fade show custom_flash_msg" role="alert">
      <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
      <%= msg  %>
    </div>
  <% elsif name == 'alert' %>
    <div class="alert alert-danger alert-dismissible fade show custom_flash_msg" role="alert">
      <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
      <%= msg  %>
    </div>
  <% end%>
<% end %>
