<h1>Tickets Activos</h1>

  <div class="container">
    <table class="table table-hover">
      <thead>
        <th scope="col">Ticket ID</th>
        <th scope="col">Mesa</th>
        <th scope="col">Precio Final</th>
        <th colspan="5">Acciones</th>
      <tbody>
          <% @ticketsActive.each do |ticket| %>
          <tr>
            <td><%= ticket.id %></td>
            <td><%= ticket.table %></td>
            <td>$<%= ticket.final_price %></td>
            <td><%= link_to 'Ver', ticket, class: "btn btn-success" %></td>
            <%= form_with(model: @ticket, url: tickets_path, local: true, method: :delete) do |f| %>
              <td><%= link_to 'Completar', ticket, class: "btn btn-primary", method: :delete, data: { confirm: 'Are you sure?' } %></td>
            <% end %>
          </tr>
          <% end %>
      </tbody>
    </table>
  </div>

  <h1 class="my-3">Tickets Inactivos</h1>
  <div class="container">
    <table class="table table-hover">
      <thead>
        <th scope="col">Ticket ID</th>
        <th scope="col">Mesa</th>
        <th scope="col">Precio Final</th>
        <th colspan="5">Acciones</th>
      <tbody>
          <% @ticketsInactive.each do |ticket| %>
          <tr>
            <td><%= ticket.id %></td>
            <td><%= ticket.table %></td>
            <td>$<%= ticket.final_price %></td>
            <td><%= link_to 'Ver', ticket, class: "btn btn-success" %></td>
          </tr>
          <% end %>
      </tbody>
    </table>
  </div>

