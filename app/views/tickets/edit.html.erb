<h1 class="my-3">Add food to ticket ID:<%= @ticket.id %></h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Nombre</th>
      <th>Cantidad</th>
      <th>Precio</th>
      <th>Tipo</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @foods.each do |food| %>
      <tr>
        <td><%= food.name %></td>
        <td><%= food.quantity %></td>
        <td><%= food.price %></td>
        <td><%= food.food_type %></td>
        <%= form_with(model: @ticket, url: ticket_path(@ticket), local: true, method: :patch) do |f| %>
          <td><%= f.button "Add food", name: "dish", value: food.id, class: "btn btn-success" %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>
