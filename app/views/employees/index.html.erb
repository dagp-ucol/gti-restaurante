<h1 class="my-3">Empleados</h1>

<p>
  <%= link_to 'Añadir', new_employee_path, class: 'btn btn-primary my-3' %>
</p>

<h4>Empleados trabajando</h4>
<div class="card mb-4">
  <div class="card-body">
    <table class="table table-striped">
      <thead>
        <tr>
          <th scope="col">Id</th>
          <th scope="col">Nombres</th>
          <th scope="col">Apellidos</th>
          <th scope="col">Posición</th>
          <th scope="col">Celular</th>
          <th scope="col">Trabajando</th>
          <th coolspan=2>Acciones</th>
        </tr>
      </thead>
      <tbody>
        <% @employees.each do |employee| %>
           <tr>
            <th scope="row"><%= employee.id %></th>
            <td><%= employee.first_name %></td>
            <td><%= employee.last_name %></td>
            <td><%= employee.position %></td>
            <td><%= employee.email %></td>
            <td><%= employee.working %></td>
            <td><%= link_to 'Ver', employee_path(employee.id), class: 'btn btn-primary' %></td>
            <td><%= link_to 'Editar', edit_employee_path(employee.id), class: 'btn btn-success' %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>

<h4>Empleados no trabajando</h4>
