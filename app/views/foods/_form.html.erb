      <ul>
        <% food.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label "Nombre" %>
    <%= form.text_field :name %>
  </div>

  <div class="field">
    <%= form.label "Cantidad" %>
    <%= form.number_field :quantity %>
  </div>

  <div class="field">
    <%= form.label "Precio" %>
    <%= form.text_field :price %>
  </div>

  <div class="field mb-3">
    <%= form.label "Tipo" %>
